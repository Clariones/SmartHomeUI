<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/cmptactivity_normal_hvac_button_size"
        android:layout_height="@dimen/cmptactivity_normal_hvac_button_size"
        android:id="@+id/item_image"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/cmptactivity_normal_hvac_button_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="New Text"
        android:id="@+id/item_text"
        android:textSize="@dimen/cmptactivity_normal_hvac_selection_text_size"
        android:layout_gravity="center"
        android:gravity="center" />
</LinearLayout>